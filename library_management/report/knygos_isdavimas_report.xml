<odoo>
    <data>
        <!-- Report Template -->
        <template id="report_knygos_isdavimas">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <h2>Book Issuance Report</h2>
                        <p>Contact: <t t-esc="doc.kontaktas_id.name"/></p>
                        <p>Start Date: <t t-esc="doc.pradzios_data"/></p>
                        <p>End Date: <t t-esc="doc.pabaigos_data"/></p>
                        <p>Status: <t t-esc="doc.busena"/></p>
                        <h3>Books:</h3>
                        <ul>
                            <li t-foreach="doc.knygu_ids" t-as="book">
                                <t t-esc="book.pavadinimas"/>
                            </li>
                        </ul>
                    </div>
                </t>
            </t>
        </template>

        <!-- Report Action -->
        <record id="action_report_knygos_isdavimas" model="ir.actions.report">
            <field name="name">Book Issuance Report</field>
            <field name="model">biblioteka.knygos_isdavimas</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">library_management.report_knygos_isdavimas</field>
            <field name="report_file">library_management.report_knygos_isdavimas</field>
            <field name="attachment_use">False</field>
        </record>
    </data>
</odoo>